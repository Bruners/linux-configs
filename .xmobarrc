Config { font = "-schumacher-clean-medium-r-normal--12-120-75-75-c-60-iso10646-1"
    , bgColor = "black"
    , fgColor = "grey"
    , position = Static { xpos = 1440, ypos = 0, width = 1556, height = 16 } 
    , commands = [ Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                 , Run Memory ["-t","Mem: <usedratio>%"] 10
                 , Run Swap [] 10
				 , Run Com "atitemp" [] "ati" 10
                 , Run Date "%a %b %_d %H:%M" "date" 10
                 , Run StdinReader
				 , Run Com "nowplay" [] "QuodLibet" 5
                 ]
    , sepChar = "%"
    , alignSep = "}{"
    , template = "%StdinReader% }{ %cpu% / %ati% | %memory% * %swap% <fc=#ffffff>%QuodLibet%</fc> <fc=#ee9a00>%date%</fc>"
    }
