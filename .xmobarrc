Config { font = "xft:Terminus-8:style=Bold"
    , bgColor = "black"
    , fgColor = "grey"
    , position = Static { xpos = 1440, ypos = 0, width = 1050, height = 15 }
    , lowerOnStart = True
    , commands = [ Run StdinReader
                 , Run Com "atitemp" [] "ati" 60
                 , Run Date "%a %b %_d %H:%M" "date" 10
                 , Run Weather "ENVA" ["-t","<station>: <tempC>C"] 3600
                 ]
    , sepChar = "%"
    , alignSep = "}{"
    , template = "%StdinReader% }{ %ENVA% / %ati%C <fc=#ee9a00>%date% </fc>"
    }
