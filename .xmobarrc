Config { font = "xft:Terminus-8:style=Bold"
    , bgColor = "black"
    , fgColor = "grey"
    , position = Static { xpos = 1920, ypos = 0, width = 1768, height = 16 }
    , lowerOnStart = True
    , commands = [ Run StdinReader
                 , Run Com "atitemp" [] "ati" 60
                 , Run Date "%a %b %_d %H:%M" "date" 10
                 , Run Weather "ENBO" ["-t","<station>: <tempC>C"] 3600
                 ]
    , sepChar = "%"
    , alignSep = "}{"
    , template = "%StdinReader% }{ %ENBO% / %ati%C <fc=#ee9a00>%date% </fc>"
    }
