Config { font = "xft:Terminus-8:style=Bold"
    , bgColor = "black"
    , fgColor = "grey"
    , position = Static { xpos = 0, ypos = 0, width = 1440, height = 15 }
    , lowerOnStart = True
    , commands = [ Run Memory ["-L","0","-H","30","--normal","orange","--high","chocolate1","-t","Mem: <usedratio>%"] 10
                 , Run Swap [] 10
                 , Run Com "atitemp" [] "ati" 60
                 , Run Date "%a %b %_d %H:%M" "date" 10
                 , Run Network "wlan0" ["-L","0","-H","32","--normal","orange","--high","chocolate1"] 10
                 , Run Cpu ["-L","10","-H","50","--normal","orange","--high","chocolate1"] 10
                 , Run CoreTemp ["-L","40","-H","60","-l","lightblue","-n","gray90","-h","red"] 50
                 ]
    , sepChar = "%"
    , alignSep = "}{"
    , template = "[%wlan0%] [%cpu%] [%memory%] [%coretemp%] [GPU: %ati%C] } { <fc=#ee9a00>%date%</fc>"
    }
