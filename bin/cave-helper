#!/bin/bash
echo -e "\033[1mContinue on failure:\033[0m"
echo -e "cave resolve \033[1;35;148m-x -Cs\033[0m installed-packages"
echo -e "cave resolve \033[1;35;148m--execute --continue-on-failure if-satisfied\033[0m installed-packages"
echo ""
echo -e "\033[1mPreserve world:\033[0m"
echo -e "cave resolve \033[1;35;148m-x1\033[0m <package>"
echo -e "cave resolve \033[1;35;148m--execute --preserve-world\033[0m <package>"
echo ""
echo -e "\033[1mUpdate scm (daily)\033[0m"
echo -e "cave resolve \033[1;35;148m-x1 -Rd -Cs\033[0m installed-packages"
echo -e "cave resolve \033[1;35;148m--execute --preserve-world --reinstall-scm daily --continue-on-failure if-satisfied\033[0m installed-packages"
echo ""
echo -e "\033[1mFix broken packages and rebuild them\033[0m"
echo -e "cave fix-linkage \033[1;35;148m-x -- -Cs\033[0m"
echo -e "cave fix-linkage \033[1;35;148m--execute -- --continue-on-failure if-satisfied\033[0m"
