#!/bin/sh

WINE_PATH="/usr/bin/wine"

case "$1" in
    "bf2")
        $WINE_PATH /games/BF2/BF2.exe
        ;;
    "wc3")
        $WINE_PATH /games/Warcraft\ III/Frozen\ Throne.exe -opengl
        ;;
    "wow")
        $WINE_PATH /games/WoW/Wow.exe -opengl
        ;;
    "d3")
        setarch i386 -3 -L -B -R $WINE_PATH /games/Diablo\ III/Diablo\ III.exe -launch
        ;;
    "diablo")
        setarch i386 -3 -L -B -R $WINE_PATH /games/Diablo\ III/Diablo\ III.exe -launch
esac
exit 0

